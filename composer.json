{
    "name": "ihossain/laravel-tags",
    "description": "A Laravel package for tagging courses and blogs",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Imran Hossain",
            "email": "imran.wpsi@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^7.0|^8.0",
        "mockery/mockery": "^1.4",
        "laravel/legacy-factories": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Ihossain\\LaravelTags\\": "src/",
            "Ihossain\\LaravelTags\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ihossain\\LaravelTags\\LaravelTagsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
